{
  "name": "Polish translations for OXID eShop",
  "vendor": "otrance",
  "id": "",
  "type": "oxid",
  "picture": "",
  "price": "0.00",
  "license": "GPLv3",
  "desc": {
    "en": "Polish language file translations for OXID eShop front end and admin panel",
    "de": "Übersetzung der Sprachdateien für OXID eShop in Polnisch (Frontend und Admin-Panel)"

  },
  "tags": [
    "frontend",
    "backend",
    "languages"
  ],
  "versions": {
    "4.9.2": {
      "project": "https://github.com/OXIDprojects/languages",
      "url": "https://github.com/OXIDprojects/languages/archive/master.zip",
      "supported": [
        "4.9",
        "4.8"
      ],
      "mapping": [
        {
          "src": "application/translations/pl/",
          "dest": "application/translations/pl/"
        },
        {
          "src": "application/views/azure/pl/",
          "dest": "application/views/azure/pl/"
        },
        {
          "src": "application/views/admin/pl/",
          "dest": "application/views/admin/pl/"
        },
        {
          "src": "out/azure/img/lang/pl.png",
          "dest": "out/azure/img/lang/"
        }
      ]
    }
  },
  "hooks": {
    "postinstall": {
      "type": "overlay",
      "message": "Please go to admin -> Master settings -> Languages. Create a new language by entering \"pl\" as locale and \"Polski\" as name. If you find any mistakes please feel free to register at the translation center.",
      "link": "http://translate.oxidforge.org"
    }
  }
}